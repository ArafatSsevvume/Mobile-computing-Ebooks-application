<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".page4">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:backgroundTint="#FBB505"
            android:padding="25dp"
            android:background="@drawable/custom_edittext">
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/account_circle_24"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#A8A8A8"
                android:layout_margin="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:text="Jesca N"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

            </LinearLayout>
            </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="20dp">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:orientation="horizontal"
    android:backgroundTint="#090909"
    android:gravity="center_horizontal"
    android:background="@drawable/custom_edittext">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:backgroundTint="#FBB505"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="8dp"
        android:background="@drawable/custom_edittext"
        >
        <ImageView
            android:layout_width="70dp"
            android:paddingTop="10dp"
            android:layout_height="80dp"
            android:src="@drawable/baseline_library_books_24"
            android:contentDescription="@string/MyStringDescription"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="Library"
            android:textColor="@color/black"
            android:textSize="25sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:backgroundTint="#FBB505"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="8dp"
        android:background="@drawable/custom_edittext"
        >
        <ImageView
            android:layout_width="70dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="10dp"
            android:layout_height="80dp"
            android:src="@drawable/baseline_account_balance_wallet_24"
            android:contentDescription="@string/MyStringDescription"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="My Wallet"
            android:textColor="@color/black"
            android:textSize="25sp" />


    </LinearLayout>




    </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:backgroundTint="#FBB505"
            android:background="@drawable/custom_edittext">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:backgroundTint="#FBB505"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:background="@drawable/custom_edittext"
                >
                <ImageView
                    android:layout_width="70dp"
                    android:paddingTop="10dp"
                    android:layout_height="80dp"
                    android:src="@drawable/baseline_shopping_cart_24"
                    android:contentDescription="@string/MyStringDescription"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="19dp"
                    android:text="Purchases"
                    android:textColor="@color/black"
                    android:textSize="25sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:backgroundTint="#FBB505"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:background="@drawable/custom_edittext"
                >
                <ImageView
                    android:layout_width="70dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="10dp"
                    android:contentDescription="@string/MyStringDescription"
                    android:layout_height="80dp"
                    android:src="@drawable/baseline_download_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="19dp"
                    android:text="Downloads"
                    android:textColor="@color/black"
                    android:textSize="25sp" />


            </LinearLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:backgroundTint="@color/black"
        app:cardElevation="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"

                >
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/MyStringDescription"
                    android:src="@drawable/baseline_home_24"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="end"

                >
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/MyStringDescription"
                    android:src="@drawable/baseline_history_24"
                    />


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>