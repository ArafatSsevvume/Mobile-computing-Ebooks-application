<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:backgroundTint="@color/black"
    tools:context=".page3">

    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:backgroundTint="#F6EFEF"
            android:background="@drawable/custom_edittext">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_search_24"
                android:contentDescription="@string/MyStringDescription"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Search books"
                android:textSize="25sp"
                android:paddingTop="3pt"
                android:textStyle="bold"

                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:backgroundTint="#FBB505"
            android:padding="15dp"
            android:background="@drawable/custom_edittext">
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F6EFEF"
                android:layout_margin="2dp"
                android:paddingStart="5pt"
                android:paddingEnd="5pt"
                android:background="@drawable/custom_edittext"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Must Reads"
                    android:textColor="@color/black"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F6EFEF"
                android:layout_margin="2dp"
                android:paddingStart="5pt"
                android:paddingEnd="5pt"
                android:background="@drawable/custom_edittext">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Trending"
                    android:textColor="@color/black"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F6EFEF"
                android:layout_margin="2dp"
                android:background="@drawable/custom_edittext"
                >
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="5pt"
                    android:paddingEnd="5pt"
                    android:textSize="15sp"
                    android:text="Hot Searches"
                    android:textColor="@color/black"
                    />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:backgroundTint="#FBB505"
        android:padding="15dp"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:backgroundTint="#F6EFEF"
            android:layout_margin="2dp"
            android:background="@drawable/custom_edittext"
            >
            <ImageView
                android:layout_width="70dp"
                android:paddingTop="10dp"
                android:layout_height="80dp"
                android:src="@drawable/book1"
                android:contentDescription="@string/MyStringDescription"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Think Big: Unleashing Your Potential for Excellence by Carson, Ben ~ 1993 PB NEW"
                android:textColor="@color/black"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:backgroundTint="#F6EFEF"
            android:layout_margin="2dp"
            android:background="@drawable/custom_edittext"
            >
            <ImageView
                android:layout_width="70dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="10dp"
                android:layout_height="80dp"
                android:src="@drawable/richdad"
                android:contentDescription="@string/MyStringDescription"/>
            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:paddingStart="8pt"
                android:paddingEnd="8pt"
                android:text="Robert Kiyosaki Rich Dad Poor Dad What the Rich Teach Their Kids about Money: That the Poor and the Middle Class Do Not! Mass market Paperback."
                android:textSize="15sp"
                android:textColor="@color/black"
                />

        </LinearLayout>




    </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:backgroundTint="#FBB505"
            android:padding="15dp"
            android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:backgroundTint="#FBB505"
            android:padding="15dp"
            android:background="@drawable/custom_edittext">
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F6EFEF"
                android:layout_margin="2dp"
                android:paddingStart="8pt"
                android:paddingEnd="8pt"
                android:background="@drawable/custom_edittext"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:paddingStart="5pt"
                    android:paddingEnd="5pt"
                    android:text="Romance"
                    android:textColor="@color/black"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F6EFEF"
                android:layout_margin="2dp"
                android:paddingStart="5pt"
                android:paddingEnd="5pt"
                android:background="@drawable/custom_edittext">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:paddingStart="5pt"
                    android:paddingEnd="5pt"
                    android:text="Fantasy"
                    android:textColor="@color/black"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F6EFEF"
                android:layout_margin="2dp"
                android:background="@drawable/custom_edittext"
                >
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="5pt"
                    android:paddingEnd="5pt"
                    android:textSize="15dp"
                    android:text="Billionaire"
                    android:textColor="@color/black"
                    />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:backgroundTint="#FBB505"
            android:padding="15dp"
            android:background="@drawable/custom_edittext">
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F6EFEF"
                android:layout_margin="2dp"
                android:paddingStart="5pt"
                android:paddingEnd="5pt"
                android:background="@drawable/custom_edittext"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:paddingStart="5pt"
                    android:paddingEnd="5pt"
                    android:text="Comics"
                    android:textColor="@color/black"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F6EFEF"
                android:layout_margin="2dp"
                android:paddingStart="5pt"
                android:paddingEnd="5pt"
                android:background="@drawable/custom_edittext">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:paddingStart="5pt"
                    android:paddingEnd="5pt"
                    android:text="Fiction"
                    android:textColor="@color/black"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F6EFEF"
                android:layout_margin="2dp"
                android:background="@drawable/custom_edittext"
                >
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="5pt"
                    android:paddingEnd="5pt"
                    android:textSize="15sp"
                    android:text="Others"
                    android:textColor="@color/black"
                    />

            </LinearLayout>
        </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:backgroundTint="#FBB505"
            android:padding="15dp"
            android:background="@drawable/custom_edittext">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:backgroundTint="#F6EFEF"
                android:layout_margin="2dp"
                android:paddingStart="5pt"
                android:paddingEnd="5pt"
                android:background="@drawable/custom_edittext"
                >
                <ImageView
                    android:layout_width="70dp"
                    android:paddingTop="10dp"
                    android:layout_height="80dp"
                    android:src="@drawable/book2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="The Power of Mental Discipline: How Willpower and Self-Discipline Can Help You Achieve Your Goals and Dreams. Paperback"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/black"
        app:cardElevation="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="start"

                >
                <ImageView
                    android:id="@+id/his_btn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/MyStringDescription"
                    android:src="@drawable/baseline_history_24"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:paddingStart="5pt"
                android:paddingEnd="5pt"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/home_btn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_home_24"
                    android:contentDescription="@string/MyStringDescription"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_margin="2dp"

                >
                <ImageView
                    android:id="@+id/account_btn"
                    android:layout_width="48dp"
                    android:contentDescription="@string/MyStringDescription"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_account_circle_24"/>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>